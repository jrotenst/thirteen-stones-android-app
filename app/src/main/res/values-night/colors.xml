<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- For colored text; default is black/dark-gray (Day) or white/light-gray (Night) -->
    <color name="PrimaryTextColor">@color/primaryLightColor</color>
    <color name="SecondaryTextColor">@color/primaryColor</color>

    <!-- Matching colored background -->
    <color name="backgroundColoredColor">@color/primaryDarkColor</color>

    <!-- Used for Splash Screen background, and elsewhere as needed -->
    <color name="backgroundDefaultColor">@android:color/background_dark</color>
</resources>